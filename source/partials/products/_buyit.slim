.product(style='max-width: 100%; display: flex; flex-direction: column;')
  = link_to('/buyititems/' + product.title.parameterize + '/') do
    .product-image
      = image_tag(product.image)
    .product-content(style='flex-grow: 1; display: flex; flex-direction: column; justify-content: space-between;')
      .title
        h3 = product.title
      .price(style='margin-top: auto;')
        - currency = data.settings.units.currency || 'â‚¬'
        = currency + product.price.to_s
