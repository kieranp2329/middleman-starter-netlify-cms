section.products
  .container
    h2
      | Current Auction Items
    .search-bar
      input#search-input type="text" placeholder="Search by product title"
    .row
      //product is structured: ['filename', 'data']
      //sort by newest product
      - data.products.sort {|(_filename_a, a),(_filename_b, b)| a.date <=> b.date}.each do | (_filename, product) |

        //to get the actual data:
        = partial 'partials/products/product', locals: {product: product}
  script src="/main.js"

