.product-detail
  .image style=background_image(image_path(product.image))
  .content
    .meta
      h1 = product.title

      .weight
        - weight = data.settings.units.weight || 'kg'
        span = weight + product.weight.to_s

      .price
        - currency = data.settings.units.currency || 'â‚¬' 
        span = currency + product.price.to_s 

    form.netlify-form action="#" method="post" netlify
      input type="hidden" name="form-name" value="product-inquiry"
      input type="hidden" name="product" value=product.title
      input type="text" name="name" placeholder="Your Name" required
      input type="email" name="email" placeholder="Your Email" required
      textarea name="message" placeholder="Your Message" required
      button type="submit" Submit

    .body
      = markdown product.body
